        "judgment",
        "appeal"
      ],
      "triggers": [
        "legal_dispute",
        "breach_of_contract",
        "tort_claim",
        "regulatory_violation"
      ],
      "entities_involved": [
        "CLIENT",
        "CASE"
      ],
      "tags": [
        "litigation",
        "dispute_resolution",
        "court_proceedings",
        "legal_action"
      ],
      "decision_points": [
