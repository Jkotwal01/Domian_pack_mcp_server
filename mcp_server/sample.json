        "lawsuit",
        "dispute",
        "claim",
        "complaint",
        "petition",
        "appeal",
        "writ",
        "suit"
      ]
    }
  ],
  "extraction_patterns": [
    {
      "pattern": "Case No\\.: (?P<case_number>[A-Z0-9-]+)",
      "entity_type": "CASE",
      "attribute": "case_number",
      "confidence": 0.95
    },
    {
      "pattern": "Client: (?P<name>[A-Za-z\\s,]+)",
      "entity_type": "CLIENT",
      "attribute": "name",
      "confidence": 0.9
    }
  ],
  "key_terms": [
    "litigation",
    "settlement",
    "compliance",
    "regulation",
    "liability",
    "damages"
  ],
  "reasoning_templates": [
    {
      "name": "liability_assessment",
      "steps": {
        "1": "identify_party_roles",
        "2": "extract_key_obligations",
        "3": "map_breaches_and_remedies",
        "4": "assess_risk_factors",
        "5": "generate_recommendation"
      },
      "triggers": [
        "liability",
        "breach",
        "damages"
      ],
      "confidence_threshold": 0.8
    },
    {
      "name": "jurisdiction_check",
      "steps": {
        "1": "identify_jurisdiction",
        "2": "check_court_rules",
        "3": "assess_venue_suitability",
        "4": "flag_conflicts"
      },
      "triggers": [
        "jurisdiction",
        "venue",
        "court"
      ],
      "confidence_threshold": 0.7
    }
  ],
  "relationship_types": [
    {
      "type": "INVOLVED_IN",
      "business_context": {
        "role_required": true,
        "liability_tracking": true
      }
    },
    {
      "type": "REPRESENTS",
      "business_context": {
        "retainer_required": true,
        "conflict_check": true
      }
    },
    {
      "type": "CONTAINS",
      "business_context": {
        "relevance_scoring": true,
        "review_status": true
      }
    }
  ],
  "entity_aliases": {
    "CLIENT": [
      "customer",
      "party"
    ]
  },
  "business_context": {
    "risk_levels": [
      "low",
      "medium",
      "high",
      "critical"
    ],
    "compliance_frameworks": [
      "SOX",
