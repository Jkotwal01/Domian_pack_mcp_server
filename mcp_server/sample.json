    ],
    "urgency_levels": [
      "routine",
      "expedited",
      "emergency"
    ]
  },
  "relationships": [
    {
      "name": "INVOLVED_IN",
      "from": "CLIENT",
      "to": "CASE",
      "attributes": [
        "role",
        "involvement_date",
        "status",
        "liability_amount",
        "claim_amount"
      ],
      "synonyms": [
        "party_to",
        "subject_of",
        "involved_in",
        "affected_by"
      ]
