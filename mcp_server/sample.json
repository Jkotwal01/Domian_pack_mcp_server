        "client_id",
        "name",
        "type",
        "industry",
        "contact_info",
        "address",
        "phone",
        "email",
        "legal_entity_type",
        "registration_number",
        "pan_number",
        "aadhaar_number",
        "gst_number",
        "incorporation_date",
        "authorized_signatory",
        "business_nature"
      ],
      "synonyms": [
        "customer",
        "party",
        "entity",
        "plaintiff",
        "defendant",
        "respondent",
        "petitioner",
        "appellant",
        "claimant"
      ]
    },
    {
      "name": "Case",
      "type": "CASE",
      "attributes": [
        "case_number",
        "title",
        "status",
        "jurisdiction",
        "filing_date",
        "court",
        "judge",
        "case_type",
        "priority",
        "estimated_value",
        "outcome",
        "dispute_amount",
        "cause_of_action",
        "relief_sought",
        "next_hearing_date",
        "case_stage",
        "appeal_status"
